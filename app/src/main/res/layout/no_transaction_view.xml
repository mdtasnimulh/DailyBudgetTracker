<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gray"
    android:layout_margin="2dp">

    <View
        android:id="@+id/imageEmpty"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        app:layout_constraintVertical_bias="0.45"
        android:background="@drawable/gray_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titleEmpty"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="50dp"
        android:background="#AAA9A9"
        app:layout_constraintEnd_toStartOf="@+id/amountEmpty"
        app:layout_constraintStart_toEndOf="@+id/imageEmpty"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/categoryEmpty"
        android:layout_width="90dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:background="#AAA9A9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleEmpty"
        app:layout_constraintStart_toStartOf="@+id/titleEmpty" />

    <View
        android:id="@+id/amountEmpty"
        android:layout_width="65dp"
        android:layout_height="12dp"
        android:layout_marginEnd="15dp"
        android:background="#AAA9A9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleEmpty" />

    <View
        android:id="@+id/dateEmpty"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:layout_marginTop="15dp"
        android:background="#AAA9A9"
        app:layout_constraintBottom_toBottomOf="@+id/categoryEmpty"
        app:layout_constraintEnd_toEndOf="@+id/amountEmpty"
        app:layout_constraintTop_toBottomOf="@+id/amountEmpty" />

</androidx.constraintlayout.widget.ConstraintLayout>