<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EEE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange3</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/FabButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFavButtonStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="CustomTextCapitalizationCareerCounseling" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="FabButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabStyleOne</item>
    </style>

    <style name="FabButtonCut" parent="">
        <item name="shapeAppearanceOverlay">@style/FabStyleCut</item>
    </style>

    <style name="ExtendedFavButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabStyleOne</item>
    </style>

    <style name="FabStyleOne" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="FabStyleCut" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">49%</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <style name="CalendarWeekTextColor" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="greetingsRoundImage" parent="">
        <item name="cornerSize">35%</item>
    </style>

</resources>